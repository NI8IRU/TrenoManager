<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.corso.utente.Utente" table="utenti">
        <id name = "id" type = "int" column = "id">
         <generator class="increment"/>
      </id>
	<property name = "username" column = "nome" type = "string" unique="true"/>
	<property name = "password" column = "password" type = "string" />
	<list name="listaTreni" cascade="all">
      	<key column="utenteId"></key>
      	<index column="type" type="int"/>
      	<one-to-many class="com.corso.dto.TrenoDTO"/>
      </list>
	
        <!-- Definizione della relazione many-to-many con Role -->
        <set name="ruoli" table="joining_utente_ruolo">
            <key column="id_utente" />
            <many-to-many column="id_ruolo" class="com.corso.utente.Ruolo" />
        </set>
    </class>
	
	<class name="com.corso.utente.Ruolo" table="ruoli">
    	<id name="id" type="int" column="id">
       		<generator class="increment" />
    	</id>
    	<property name = "ruoli" column = "tipo_ruolo" type = "string" />
	</class>
</hibernate-mapping>